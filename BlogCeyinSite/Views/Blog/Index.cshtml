@model IEnumerable<BlogCeyinSite.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog List</h2>
<hr />

@if (TempData["Blog"] != null)
{
    var blog = (BlogCeyinSite.Models.Blog)TempData["Blog"];
    <div class="alert alert-success" role="alert">
        <strong>@blog.Title updated @DateTime.Now</strong>
    </div>
}

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubmitTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confirm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublishHome)
        </th>
    </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.ActionLink(@item.Title, "Details", new { id = item.Id }, new { @class = "btn btn-default btn-xs" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmitTime)
                </td>
                <td>
                    @if (item.Confirm)
                    {
                        <label class="label label-success">Confirmed</label>
                    }
                    else
                    {
                        <label class="label label-warning">Waiting</label>
                    }

                </td>
                <td>
                    @if (item.PublishHome)
                    {
                        <label class="label label-success">Published</label>
                    }
                    else
                    {
                        <label class="label label-danger">Not Published</label>
                    }

                </td>                
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Add New Blog", "Create", null, new { @class = "btn btn-primary" })
    </p>
