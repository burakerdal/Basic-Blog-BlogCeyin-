@model IEnumerable<BlogCeyinSite.Models.BlogModel>
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-8">
        @if (User.Identity.IsAuthenticated)
        {
            <h2>Hi, @User.Identity.Name</h2>
        }
        <hr/>
        @foreach (var blog in Model)
        {
            <div class="blogItem">
                <h2 class="page-header">
                    @blog.Title
                </h2>
                <img class="img-responsive" src="http://placehold.it/900x300" alt="" />
                <hr />
                <p>
                    @blog.SubmitTime @blog.Author
                </p>
                <hr />
                <h3>
                    @blog.Description @Html.ActionLink("More", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
                </h3>
                <hr />
            </div>

        }
    </div>
    <div class="col-md-4">
        <div class="well">
            <h4>Search</h4>
            <div class="input-group">
                <input type="text" class="form-control">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>
        </div>
        <div class="well">
